{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "clear_jest": "jest --clearCache",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "epub-meta",
  "author": "Aki Rautio",
  "module": "dist/epub-meta.esm.js",
  "size-limit": [
    {
      "path": "dist/epub-meta.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/epub-meta.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "@types/jest": "^26.0.22",
    "@types/mime-types": "^2.1.0",
    "@types/xml2js": "^0.4.8",
    "husky": "^6.0.0",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "mime-types": "^2.1.30",
    "node-stream-zip": "^1.13.3",
    "xml2js": "^0.4.23"
  }
